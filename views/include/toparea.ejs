<script src="/public/javascript/topKategory.js" type='text/javascript'></script>
<header>
    <div class="toparea">
        <span class="top_item menu">
            <a class="menu_toggle">
                <span></span>
            </a>
            <div class="top_selectarea" style="display:none;">
                <div class="top_kategory_list" id='first_kate'>
                    <p class='top_kategory_title'>전체 카테고리 &#10095;</p>
                    <hr class='top_kate_line'>
                    <ul class='top_kate_ul top_first_ul'>
                    </ul>
                </div>
                <div class="top_kategory_list" id='top_second_kate' style="display:none;">

                </div>
            </div>
        </span>
        <span class="top_item logo">
            <a href="javascript:moveMain()">
                <h1 id="logo">
                    아오이 마켓
                </h1>
            </a>
        </span>
        <span class="top_item login">
            <% if(!login_id){ %>
                <p id="login_area"><a href="/login">로그인</a> | <a href="/join">회원가입</a></p>
                <% } else{ %>
                    <p id="login_area">
                        <a href="/info?<%=login_id%>">마이페이지</a> | <a href="/logout">로그아웃</a>
                    </p>
                    <% } %>
        </span>

    </div>
    <section class=" search_form">
        <form method="post" action='/searchItem'>
            <input id="search" type="text" placeholder="원하는 물품을 검색해보세요.">
        </form>
    </section>
</header>