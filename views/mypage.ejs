<!DOCTYPE HTML>
<html>

<head>
    <%- include('include/header') %>
        <script src="../../public/javascript/bannerSlide.js" type="text/javascript"></script>
        <script>
            function itemSubmmit() {
                location.href = '/itemSubmmit';
            }
        </script>
</head>

<body>
    <div class="wrapper">
        <%- include('include/toparea') %>
            <section class="mypage_intro">
                <p><span class="user_name">
                        <%=login_id%>
                    </span>환영합니다!
                </p>
            </section>
            <section class="selling">
                <p class="mypage_title"><span class="mypage_title-strong">판매중</span> 상품(총 <%=selling_data.length%>건)</p>
                <article class="item_list">
                    <% for(let i=0; i<=selling_data.length-1; i++){%>
                        <section class="item_info">
                            <a href="/iteminfo?itemid=<%=selling_data[i].item_id%>">
                                <div class="item_img">
                                    <img src="<%= selling_data[i].item_firstimg %>" />
                                </div>
                                <div class="item_title">
                                    <p id="item_name">
                                        <%= selling_data[i].item_title %>
                                    </p>
                                    <p id="item_price">
                                        <%= selling_price[i] %>원
                                    </p>
                                </div>
                            </a>
                        </section>
                        <% } %>
                </article>
            </section>
            <section class="selling">
                <p class="mypage_title"><span class="mypage_title-strong">판매완료</span> 상품(총 <%=soldout_data.length%>건)
                </p>
                <article class="item_list">
                    <% for(let i=0; i<=soldout_data.length-1; i++){ %>
                        <section class="item_info">
                            <a href="/iteminfo?itemid=<%=soldout_data[i].item_id%>">
                                <div class="item_img">
                                    <div class="completearea">
                                        판매완료
                                    </div>
                                    <img src="<%= soldout_data[i].item_firstimg %>" />
                                </div>
                                <div class="item_title">
                                    <p id="item_name">

                                        <%= soldout_data[i].item_title %>
                                    </p>
                                    <p id="item_price">
                                        <%= soldout_price[i] %>원
                                    </p>
                                </div>
                            </a>
                        </section>
                        <% } %>
                </article>
            </section>
    </div>
    <% if(login_id) { %>
        <div class="regi_item">
            <button id="regi_button" onClick='itemSubmmit()'>상품등록</button>
        </div>
        <% } %>
            </div>
</body>

</html>