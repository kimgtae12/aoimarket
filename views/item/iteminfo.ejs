<!DOCTYPE HTML>
<html>

<head>
    <%- include('../include/header') %>
        <link href="/public/stylesheet/iteminfo.css" rel="stylesheet">
        <script src="/public/javascript/itemInfo.js" type='text/javascript'></script>
</head>

<body>
    <div class="wrapper">
        <%- include('../include/toparea') %>
            <article class="info_form">
                <span class="kategorie">전체상품 - </span><span class="kategorie">
                    <%=item_info[0].item_kate1 %> -
                </span>
                <a href="#"><span class="kategorie kate_result">
                        <%=item_info[0].item_kate2 %>
                    </span></a>
                <hr id="division_line">
                <% if(item_info){ %>
                    <section class="item_moreinfo">
                        <div class="item_info_imgarea">
                            <div id='completearea'>
                            </div>
                            <img id="select_img" src="<%= item_info[0].item_firstimg %>" />
                            <div class="other_imgarea">
                                <span><img class="other_img other_first"
                                        src="<%= item_info[0].item_firstimg %>" /></span>
                                <span><img class="other_img other_first"
                                        src="<%= item_info[0].item_firstimg %>" /></span>
                                <span><img class="other_img other_first"
                                        src="<%= item_info[0].item_firstimg %>" /></span>
                            </div>
                        </div>
                        <div class="item_info_titlearea">
                            <p>
                                <span id='selling'>
                                    <%=item_info[0].item_selling %>
                                </span>
                                </span>
                                <%=item_info[0].item_title %>
                            </p>
                        </div>
                        <div class="item_info_pricearea">
                            <h2>
                                <%=price[0] %>원
                            </h2>
                        </div>
                        <div class="item_info_statarea">
                            <p>
                                제품상태 - <span id='item_stat'>
                                    <%=item_info[0].item_stat %>
                                </span>
                            </p>
                        </div>
                        <div class="item_info_tradearea">
                            <p>
                                거래방법 - <span id='item_trade'>
                                    <%=item_info[0].item_trade %>
                                </span>
                            </p>
                        </div>
                        <div class="item_info_chatarea">
                            <div>
                                <input id="chating_button" onclick="openWindowPop('/chating','chating')" type="button"
                                    value="구매문의" />

                            </div>
                        </div>
                    </section>
                    <hr id="division_line">
                    <section id="item_info_comment">
                        <h3>상품 설명</h3>
                        <textarea readonly id='info_textarea'><%= item_info[0].item_comment %></textarea>
                    </section>
                    <% } %>
                        <section id="item_reply_area">
                            <div class="reply_wrapper">
                                <% if(reply){ for(let i=0; i<=reply.length-1; i++){ %>
                                    <div class="reply_first">
                                        <div class="reply_info">
                                            <span class="reply_id">
                                                <%=reply[i].reply_name %>
                                            </span><span class="reply_time">
                                                <%=reply[i].reply_date %>
                                            </span>
                                        </div>
                                        <div class="reply_update">
                                            <% if(login_id !=reply[i].reply_id){ %>
                                                <div style="visibility: hidden;">
                                                    <% } %>
                                                        <span><a href="#">수정</a> <a href="#">삭제</a></span>
                                                        <% if(login_id !=reply[i].reply_id){ %>
                                                </div>
                                                <% } %>
                                        </div>
                                        <p class="reply_style">
                                            <%= reply[i].reply_contents %>
                                        </p>
                                        <button onClick='openReplyArea(<%= reply[i].reply_idx%>)'
                                            class='second_reply_button'>답글</button>


                                        <div class="second_reply" id='second_reply<%= reply[i].reply_idx%>'
                                            style="display:none;">
                                            <hr class="reply_division_line">
                                            <div class="left_area">
                                                <p>⤷</p>
                                            </div>
                                            <div class="reply_area">
                                                <p class="reply_id_area">
                                                    <%= login_id %>
                                                </p>
                                                <% if(login_id) {%>
                                                    <form method='post' action='iteminfo/second_reply'>
                                                        <input type="hidden" value='<%=item_info[0].item_id%>'
                                                            name='item_id'>
                                                        <input type="hidden" value='<%=reply[i].reply_idx %>'
                                                            name='reply_idx' />
                                                        <textarea class="input_reply" wrap="hard"
                                                            name='input_reply'></textarea>
                                                        <input class="reply_button" type="submit" value="댓글 등록" />
                                                    </form>
                                                    <% } else{ %>
                                                        <p class="reply_id_area"><a href="/login"
                                                                style="text-decoration: underline;">로그인</a>후 이용해주세요.</p>
                                                        <% } %>
                                            </div>
                                        </div>
                                    </div>

                                    <hr class="reply_division_line">
                                    <% } } %>
                                        <form action="iteminfo/reply" method='post' id='first_replay_form'>
                                            <div class="input_info">
                                                <p class="reply_id_area">
                                                    <%= login_id %>
                                                </p>
                                            </div>
                                            <input type="hidden" value='<%= item_info[0].item_id %>' name='item_id' />
                                            <div class="reply_textarea">
                                                <textarea class="input_reply" wrap="hard" name='input_reply'></textarea>
                                            </div>
                                            <input type="submit" class="reply_button" value="댓글등록">
                                        </form>
                            </div>
                        </section>
            </article>


</body>

</html>