<!DOCTYPE HTML>
<html>

<head>
    <%- include('include/header') %>
        <script src="../../public/javascript/bannerSlide.js" type="text/javascript"></script>
        <script>
            function itemSubmmit() {
                location.href = '/itemSubmmit';
            }
        </script>
</head>

<body>
    <div class="wrapper">
        <%- include('include/toparea') %>
            <div class="item_area">
                <span class="list_title first">
                    <%=search_item%>
                </span>
                <span class="list_title second">검색결과 입니다.</span>
                <article class="item_list">
                    <% for(var i=0; i<=data.length-1; i++) { %>
                        <section class="item_info">

                            <a href="/iteminfo?itemid=<%=data[i].item_id%>">
                                <div class="item_img">
                                    <img src="<%= data[i].item_firstimg %>" />
                                </div>
                                <div class="item_title">
                                    <p id="item_name">
                                        <%= data[i].item_title %>
                                    </p>
                                    <p id="item_price">
                                        <%= price[i] %>원
                                    </p>
                                </div>
                            </a>
                        </section>
                        <% } %>
                </article>
            </div>
            <% if(login_id) { %>
                <div class="regi_item">
                    <button id="regi_button" onClick='itemSubmmit()'>상품등록</button>
                </div>
                <% } %>
    </div>
</body>

</html>